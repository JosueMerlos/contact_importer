<h1>UserFiles</h1>
<%= form_with(model: @user_file) do |form| %>
  <% if @user_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_file.errors.count, "error") %> prohibited this file from being saved:</h2>

      <ul>
        <% @user_file.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :file, class: 'form-label' %>
    <%= form.file_field :file, class: 'form-control' %>
  </div>

  <div class="row valid_columns hide">
    <h2>Please Select Order Columns</h2>
    <div class="col-sm-2">
      <label for="column_name">Name:</label>
      <select id="column_name" name="user_file[columns][name]" class="form-select select-columns">
        <option value=""></option>
        <option value="0">One</option>
        <option value="1">Two</option>
        <option value="2">Three</option>
        <option value="3">Four</option>
        <option value="4">Five</option>
        <option value="5">Six</option>
      </select>
    </div>
    <div class="col-sm-2">
      <label for="column_date">Date:</label>
      <select id="column_date" name="user_file[columns][date]" class="form-select select-columns">
        <option value=""></option>
        <option value="0">One</option>
        <option value="1">Two</option>
        <option value="2">Three</option>
        <option value="3">Four</option>
        <option value="4">Five</option>
        <option value="5">Six</option>
      </select>
    </div>
    <div class="col-sm-2">
      <label for="column_email">Email:</label>
      <select id="column_email" name="user_file[columns][email]" class="form-select select-columns">
        <option value=""></option>
        <option value="0">One</option>
        <option value="1">Two</option>
        <option value="2">Three</option>
        <option value="3">Four</option>
        <option value="4">Five</option>
        <option value="5">Six</option>
      </select>
    </div>
    <div class="col-sm-2">
      <label for="column_address">Address:</label>
      <select id="column_address" name="user_file[columns][address]" class="form-select select-columns">
        <option value=""></option>
        <option value="0">One</option>
        <option value="1">Two</option>
        <option value="2">Three</option>
        <option value="3">Four</option>
        <option value="4">Five</option>
        <option value="5">Six</option>
      </select>
    </div>
    <div class="col-sm-2">
      <label for="column_phone">Phone:</label>
      <select id="column_phone" name="user_file[columns][phone]" class="form-select select-columns">
        <option value=""></option>
        <option value="0">One</option>
        <option value="1">Two</option>
        <option value="2">Three</option>
        <option value="3">Four</option>
        <option value="4">Five</option>
        <option value="5">Six</option>
      </select>
    </div>
    <div class="col-sm-2">
      <label for="column_credit_card">CreditCard:</label>
      <select id="column_credit_card" name="user_file[columns][credit_card]" class="form-select select-columns">
        <option value=""></option>
        <option value="0">One</option>
        <option value="1">Two</option>
        <option value="2">Three</option>
        <option value="3">Four</option>
        <option value="4">Five</option>
        <option value="5">Six</option>
      </select>
    </div>
  </div>

  <br />

  <div class="mb-3">
     <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
